{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "styles/*": [ "./styles/*" ],
      "views/*": [ "./src/views/*" ],
      "GameLibrary": [ "./src/gameLibrary/library" ],
      "charEditor/*": [ "./src/charEditor/*" ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "build"
  ]
}
